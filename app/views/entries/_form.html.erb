<div class="diary">
  <%= form_with model: @entry, local: true do |form| %>

  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %> prohibited
        this entry from being saved:
      </h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, rows: "10" %>
  </p>

  <p>
    <%= form.hidden_field :user_id , :value => current_user.id %>
    <%= form.submit %>
  </p>

<% end %>
</div>
